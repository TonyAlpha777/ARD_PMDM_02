        <!-- Colores principales de la app Tema Oscuro-->
        <item name="colorPrimary">@color/mario_red</item>
        <item name="colorAccent">@color/mario_blue</item>

        <!-- Tipo de fuente para los textos -->
        <item name="android:fontFamily">@font/mario</item><!-- Fuente -->
        <!-- ConfiguraciÃ³n del SplashScreen para el tema claro -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/icon</item>
